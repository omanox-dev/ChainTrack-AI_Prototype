# Example environment variables for backend (DO NOT COMMIT secrets)
# Copy this file to `.env` and fill in real values for local development.

# Server
PORT=5010

# Etherscan (optional)
ETHERSCAN_API_KEY=

# JSON-RPC provider (optional)
RPC_URL=

# ML service (optional)
ML_SERVICE_URL=http://localhost:8001
ML_ENABLED=false

# MongoDB / Atlas
# - For Atlas, set MONGO_URI to your mongodb+srv://... connection string and
#   set USE_MOCK_DB=false.
# - For local demos/testing, leave MONGO_URI empty and set USE_MOCK_DB=true
#   to use the in-memory fallback (mongodb-memory-server).
MONGO_URI=
USE_MOCK_DB=true
MONGO_DB_NAME=chaintrack

# Gemini / LLM (optional)
GEMINI_API_KEY=
# GEMINI_API_URL should be a base host (e.g. https://generativelanguage.googleapis.com)
# Do NOT embed API keys in URLs. Use `GEMINI_API_KEY` separately and set `USE_REAL_LLM=true` to enable.
GEMINI_API_URL=
GEMINI_MODEL=
USE_REAL_LLM=false
GEMINI_MAX_TOKENS=256
GEMINI_TIMEOUT=12000
GEMINI_CACHE_TTL=3600

# In-memory per-IP LLM rate limiting (prototype)
# - LLM_RATE_LIMIT_WINDOW_MS: time window in milliseconds
# - LLM_RATE_LIMIT_MAX: max LLM calls per IP per window
LLM_RATE_LIMIT_WINDOW_MS=60000
LLM_RATE_LIMIT_MAX=6
